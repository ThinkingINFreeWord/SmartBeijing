<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"    
    >
    <com.example.zhihuibeijing.view.NoScrollViewPager
        android:id="@+id/vp_content"
	    android:layout_width="match_parent"
	    android:layout_height="0dp" 
	    android:layout_weight="1"
     />

    
    <RadioGroup 
     android:id="@+id/tab_group"   
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:background="@drawable/bottom_tab_bg"
    android:gravity="center_vertical"   
    >
    <RadioButton 
        android:id="@+id/tab_home"
		style="@style/BottomTab"
        android:text="首页"
        android:drawableTop="@drawable/tab_home_selector"        
        />
    <RadioButton 
        android:id="@+id/tab_news"
		style="@style/BottomTab"
        android:text="新闻中心"
        android:drawableTop="@drawable/tab_news_selector"        
        />
    <RadioButton 
        android:id="@+id/tab_smart"
		style="@style/BottomTab"
        android:text="智慧服务"
        android:drawableTop="@drawable/tab_smart_selector"        
        />    
    <RadioButton 
        android:id="@+id/tab_gov"
		style="@style/BottomTab"
        android:text="政务"
        android:drawableTop="@drawable/tab_gov_selector"        
        />        
    <RadioButton 
        android:id="@+id/tab_set"
		style="@style/BottomTab"
        android:text="设置"
        android:drawableTop="@drawable/tab_set_selector"        
        />        
    </RadioGroup>



</LinearLayout>
